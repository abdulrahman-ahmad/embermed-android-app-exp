<resources>
    <!--styles for how it works fragment-->
    <style name="tv_how_it_works">
        <item name="android:layout_marginEnd">@dimen/_30dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="iv_forward_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_16dp</item>
        <item name="android:src">@drawable/ic_forward_arrow</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:paddingEnd">@dimen/_5dp</item>
    </style>

    <style name="cv_how_it_works">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
        <item name="android:layout_marginStart">@dimen/_10dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="cardBackgroundColor">@color/bg_card</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>


    //for provider registration form
    <style name="style_header_registration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/alert_bg_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12dp</item>
        <item name="android:minHeight">@dimen/_30dp</item>
    </style>

    <style name="style_divider_registration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/text_color</item>
    </style>

</resources>
