<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            tools:ignore="SpUsage">

            <include
                android:id="@+id/request_list_cardiac_item"
                layout="@layout/request_list_cardiac_item" />

            <include
                android:id="@+id/cardiac_patient_disease_item"
                layout="@layout/cardiac_patient_disease_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/request_card_padding_start_end">

                <TextView
                    android:id="@+id/txt_incident_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxWidth="@dimen/requester_name_max_width"
                    android:singleLine="true"
                    android:text="@string/incident_report"
                    android:textColor="@color/patient_disease_text_color"
                    android:textSize="@dimen/incident_report_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/is_victim_life_saved_margin_top"
                    android:layout_marginTop="@dimen/is_victim_life_saved_margin_top">

                    <TextView
                        android:id="@+id/txt_patient_disease_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxWidth="@dimen/requester_name_max_width"
                        android:singleLine="true"
                        android:text="@string/is_victim_life_saved"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/requester_name_text_size" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radio_button_margin_left"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdb_victim_life_saved_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/requester_name_text_size" />

                        <RadioButton
                            android:id="@+id/rdb_victim_life_saved_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/request_card_padding_start_end"
                            android:text="@string/no"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/requester_name_text_size" />
                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_title"
                    style="@style/EditTextStyle"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/shape_border"
                    android:hint="@string/title"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="@dimen/incident_report_input_text_padding"
                    android:theme="@style/EditTextHint" />

                <EditText
                    android:id="@+id/edt_comment"
                    style="@style/EditTextStyle"
                    android:layout_height="@dimen/comment_et_height"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/comment_margin_top"
                    android:background="@drawable/shape_border"
                    android:gravity="start"
                    android:hint="@string/comment"
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:padding="@dimen/incident_report_input_text_padding"
                    android:theme="@style/EditTextHint" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/submit_button_margin_top"
                    android:gravity="center"
                    android:weightSum="1080">

                    <Button
                        android:id="@+id/btn_submit"
                        style="@style/BtnStyle"
                        android:layout_width="0dp"
                        android:layout_margin="0dp"
                        android:layout_weight="500"
                        android:text="@string/submit" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>