<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.biz4solutions.provider.registration.views.fragments.RegistrationFragment" />

        <variable
            name="viewModel"
            type="com.biz4solutions.provider.registration.viewmodels.RegistrationViewModel" />
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10dp">

                <View style="@style/style_divider_registration" />

                <TextView
                    style="@style/style_header_registration"
                    android:text="PERSONAL" />

                <View style="@style/style_divider_registration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <RelativeLayout
                            android:id="@+id/rl_profile_pic"
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_100dp"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:contentDescription="@null"
                                android:focusable="true"
                                android:src="@drawable/ic_default_profile_pic" />

                            <ImageView
                                android:id="@+id/iv_upload_photo_registration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@null"
                                android:onClick="@{(v)->fragment.showAddMediaBottomSheet(v)}"
                                android:padding="3dp"
                                android:src="@drawable/ic_upload_profile_pic" />

                        </RelativeLayout>

                        <ProgressBar
                            android:id="@+id/img_progress_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_first_name"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/name_filter"
                            android:hint="@string/first_name"
                            android:inputType="textWebEmailAddress"
                            android:maxLength="20"
                            android:onTextChanged="@{viewModel::firstNameWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View style="@style/divider" />

                    <!--tools:ignore="SpUsage" />-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_last_name"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/name_filter"
                            android:hint="@string/last_name"
                            android:inputType="textWebEmailAddress"
                            android:maxLength="20"
                            android:onTextChanged="@{viewModel::lastNameWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_email"
                            style="@style/profile_email_edt_style"
                            android:hint="@string/email"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint"
                            tools:ignore="TextFields"
                            tools:text="abc@mailinator.com" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_phone_no"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/number_filter"
                            android:hint="Phone No."
                            android:inputType="number"
                            android:maxLength="50"
                            android:onTextChanged="@{viewModel::phoneNumberWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/edt_address"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:hint="Address(optional)"
                            android:onTextChanged="@{viewModel::addressWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_12dp" />
                </LinearLayout>

                <View
                    style="@style/style_divider_registration"
                    android:layout_marginTop="@dimen/_15dp" />

                <TextView
                    style="@style/style_header_registration"

                    android:text="PROFESSION" />

                <View style="@style/style_divider_registration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <TextView
                        style="@style/tv_label"
                        android:text="occupation" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-7dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="-7dp"
                        android:dropDownVerticalOffset="@dimen/_10dp"
                        android:entries="@{viewModel.occupationLiveList}"
                        android:minHeight="@dimen/_30dp"
                        android:onItemSelected="@{(parent,view,pos,id)->viewModel.onOccupationSelectItem(parent,view,pos,id)}"
                        android:overlapAnchor="false" />

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_other_occupation"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/name_filter"
                            android:hint="if other, mention your occupation."
                            android:inputType="textWebEmailAddress"
                            android:maxLength="50"
                            android:onTextChanged="@{viewModel::occupationWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_institute_name"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/name_filter"
                            android:hint="Institute name"
                            android:inputType="textWebEmailAddress"
                            android:maxLength="50"
                            android:onTextChanged="@{viewModel::instituteNameWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_12dp" />
                </LinearLayout>

                <View
                    style="@style/style_divider_registration"
                    android:layout_marginTop="@dimen/_15dp" />

                <TextView
                    style="@style/style_header_registration"
                    android:text="CPR" />

                <View style="@style/style_divider_registration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <TextView
                        style="@style/tv_label"
                        android:text="CPR Training Institution" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-7dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="-7dp"
                        android:dropDownVerticalOffset="@dimen/_10dp"
                        android:entries="@{viewModel.occupationLiveList}"
                        android:minHeight="@dimen/_30dp"
                        android:onItemSelected="@{(parent,view,pos,id)->viewModel.onOccupationSelectItem(parent,view,pos,id)}"
                        android:overlapAnchor="false"
                        android:scrollbars="vertical" />

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:focusableInTouchMode="false"
                        android:orientation="vertical"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_dob"
                            style="@style/profile_edt_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="@string/date_of_birth"
                            android:inputType="none"
                            android:paddingTop="@dimen/_10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_8dp" />

                    <include
                        layout="@layout/layout_toast_registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        bind:fragment="@{fragment}"
                        bind:labelName="@{@string/txt_upload_cpr_certificate}"  />

                </LinearLayout>

                <View
                    style="@style/style_divider_registration"
                    android:layout_marginTop="@dimen/_15dp" />

                <TextView
                    style="@style/style_header_registration"
                    android:text="MEDICAL LICENSE" />

                <View style="@style/style_divider_registration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_license_cpe_no"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/number_filter"
                            android:hint="License Number / NPE Number?"
                            android:inputType="number"
                            android:maxLength="10"
                            android:onTextChanged="@{viewModel::licenseNpeNumberWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:textAllCaps="true"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginTop="@dimen/_8dp" />

                    <include
                        layout="@layout/layout_toast_registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        bind:fragment="@{fragment}"
                        bind:labelName="@{@string/txt_upload_medical_certificate}" />

                </LinearLayout>

                <View
                    style="@style/style_divider_registration"
                    android:layout_marginTop="@dimen/_15dp" />

                <TextView
                    style="@style/style_header_registration"
                    android:text="OTHER" />

                <View style="@style/style_divider_registration" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/switch_telehealth_participation"
                        android:text="Do you want to participate in the telehealth triage platform?"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_16dp" />

                    <Switch
                        android:id="@+id/switch_telehealth_participation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:onCheckedChanged="@{(button, bool)-> viewModel.onSwitchChanged(bool)}"
                        android:theme="@style/switch_style" />
                </RelativeLayout>

                <View
                    style="@style/divider"
                    android:layout_marginTop="@dimen/_8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30dp"
                    android:paddingEnd="@dimen/_30dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_speciality"
                            style="@style/profile_edt_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="what is your speciality or subspeciality?"
                            android:inputType="textMultiLine"
                            android:maxLength="250"
                            android:maxLines="5"
                            android:minHeight="@dimen/_60dp"
                            android:onTextChanged="@{viewModel::specialityWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:scrollbars="vertical"
                            android:theme="@style/EditTextHint" />
                    </android.support.design.widget.TextInputLayout>

                    <View style="@style/divider" />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:theme="@style/txtInputLayout">

                        <EditText
                            android:id="@+id/edt_practise_state"
                            style="@style/profile_edt_style"
                            android:background="@null"
                            android:digits="@string/name_filter"
                            android:hint="Which state are you licensed to practise in?"
                            android:inputType="textWebEmailAddress"
                            android:onTextChanged="@{viewModel::stateWatcher}"
                            android:paddingTop="@dimen/_10dp"
                            android:theme="@style/EditTextHint" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        style="@style/divider"
                        android:layout_marginBottom="@dimen/_10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_submit_registration"
            style="@style/BtnStyle"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:onClick="@{(v)->viewModel.onSubmitClick(v)}"
            android:text="@string/submit" />
    </LinearLayout>
</layout>