<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:id="@+id/rl_rate_caller_stripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_16dp"
            tools:ignore="SpUsage,RelativeOverlap">

            <TextView
                android:id="@+id/label_rate_caller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:text="@string/rate_caller_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18dp" />

            <TextView
                android:id="@+id/tv_rate_caller_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_toEndOf="@+id/label_rate_caller"
                android:fontFamily="sans-serif"
                android:text="@string/pending"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_18dp" />

            <ImageView
                android:layout_width="@dimen/_16dp"
                android:layout_height="@dimen/_16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/ic_forward_arrow"
                android:contentDescription="@null" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/divider_color" />
    </LinearLayout>

</layout>