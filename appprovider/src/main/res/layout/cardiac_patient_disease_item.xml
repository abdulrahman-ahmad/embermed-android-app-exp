<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/request_immediate_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/request_immediate_card_height"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/request_card_elevation"
        app:cardPreventCornerOverlap="false"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/request_card_padding_start_end"
            android:paddingStart="@dimen/request_card_padding_start_end">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_patient_disease_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxWidth="@dimen/requester_name_max_width"
                    android:singleLine="true"
                    android:text="@string/patient_disease"
                    android:textColor="@color/provider_secondary_text_color"
                    android:textSize="@dimen/requester_name_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_patient_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/request_middle_space"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/provider_gender_age_text_color"
                    android:textSize="@dimen/request_medium_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_patient_disease_title" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>