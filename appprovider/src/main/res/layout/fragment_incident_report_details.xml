<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/request_list_triage_item" />

            <include
                android:id="@+id/cardiac_patient_disease_item"
                layout="@layout/cardiac_patient_disease_item" />

            <include layout="@layout/layout_incident_amount" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Rate Caller:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_20dp" />

                <com.biz4solutions.utilities.ratingBar.RotationRatingBar
                    android:id="@+id/rb_rating_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15dp"
                    app:srb_clearRatingEnabled="false"
                    app:srb_drawableEmpty="@drawable/star_empty"
                    app:srb_drawableFilled="@drawable/star_filled"
                    app:srb_numStars="5"
                    app:srb_scrollable="false"
                    app:srb_starHeight="@dimen/_30dp"
                    app:srb_starPadding="@dimen/_5dp"
                    app:srb_starWidth="@dimen/_30dp"
                    app:srb_stepSize="0.5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Go to  adflkadjf;l kadfdfad fsdfsd fdfd fsdfsdfsdfsdf jlas djfl ajsd flajk sdf;lakj sdfl;k ajsdf;lka jsdfl; kajsddfl;kajdsf;lakjsdfl;kajsdflaksjdf"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_18dp" />


            </LinearLayout>

            <include layout="@layout/layout_caller_visit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/request_card_padding_start_end">

                <TextView
                    android:id="@+id/txt_incident_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxWidth="@dimen/requester_name_max_width"
                    android:singleLine="true"
                    android:text="@string/incident_report"
                    android:textColor="@color/provider_secondary_text_color"
                    android:textSize="@dimen/incident_report_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/is_victim_life_saved_margin_top"
                    android:layout_marginTop="@dimen/is_victim_life_saved_margin_top">

                    <TextView
                        android:id="@+id/txt_patient_disease_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxWidth="@dimen/requester_name_max_width"
                        android:singleLine="true"
                        android:text="@string/is_victim_life_saved"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/requester_name_text_size" />

                    <RadioGroup
                        tools:ignore="RtlHardcoded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radio_button_margin_left"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdb_victim_life_saved_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/requester_name_text_size" />

                        <RadioButton
                            android:id="@+id/rdb_victim_life_saved_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/request_card_padding_start_end"
                            android:text="@string/no"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/requester_name_text_size" />
                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_title"
                    style="@style/EditTextStyle"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/shape_border"
                    android:hint="@string/title"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="@dimen/incident_report_input_text_padding"
                    android:theme="@style/EditTextHint" />

                <EditText
                    android:id="@+id/edt_comment"
                    style="@style/EditTextStyle"
                    android:layout_height="@dimen/comment_et_height"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/comment_margin_top"
                    android:background="@drawable/shape_border"
                    android:gravity="start"
                    android:hint="@string/comment"
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:padding="@dimen/incident_report_input_text_padding"
                    android:theme="@style/EditTextHint" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/submit_button_margin_top"
                    android:gravity="center"
                    android:weightSum="1080">

                    <Button
                        android:id="@+id/btn_submit"
                        style="@style/BtnStyle"
                        android:layout_width="0dp"
                        android:layout_margin="0dp"
                        android:layout_weight="500"
                        android:text="@string/submit" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</layout>