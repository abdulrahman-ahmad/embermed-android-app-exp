<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1535"
        tools:ignore="SpUsage">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="230" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="755"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/triage_waiting" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="450"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/_16dp"
                android:paddingRight="@dimen/_16dp"
                android:text="@string/triage_call_is_in_progress_waiting_msg"
                android:textColor="@android:color/black"
                android:textSize="@dimen/triage_call_waiting_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/triage_call_cancel_btn_margin_top"
                android:gravity="center"
                android:weightSum="1080">

                <Button
                    android:id="@+id/btn_cancel_request"
                    style="@style/BtnStyle"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="385"
                    android:background="@drawable/ripple_red_button"
                    android:text="@string/cancel" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>