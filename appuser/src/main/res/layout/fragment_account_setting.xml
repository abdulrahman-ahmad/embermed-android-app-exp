<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- my profile card-->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_2dp"
            app:cardPreventCornerOverlap="false"
            tools:ignore="SpUsage,UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_my_profile"
                    tools:ignore="contentDescription" />

                <TextView
                    style="@style/tv_account_setting"
                    android:text="@string/my_profile" />

                <ImageView
                    style="@style/iv_forward_arrow"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_forward_arrow"
                    tools:ignore="contentDescription" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- save-cards card-->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_saved_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_2dp"
            app:cardPreventCornerOverlap="false"
            tools:ignore="SpUsage,UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_saved_card"
                    tools:ignore="contentDescription" />

                <TextView
                    style="@style/tv_account_setting"
                    android:text="@string/saved_cards" />

                <ImageView
                    style="@style/iv_forward_arrow"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_forward_arrow"
                    tools:ignore="contentDescription" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- subscription card-->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_subscriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_2dp"
            app:cardPreventCornerOverlap="false"
            tools:ignore="SpUsage,UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_subscription"
                    tools:ignore="contentDescription" />

                <TextView
                    style="@style/tv_account_setting"
                    android:text="@string/subscription" />

                <ImageView
                    style="@style/iv_forward_arrow"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_forward_arrow"
                    tools:ignore="contentDescription" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>