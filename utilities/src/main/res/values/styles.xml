<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MainActivityTheme" parent="MainAppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/text_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:immersive">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/text_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/default_left_right_margin</item>
        <item name="android:layout_marginStart">@dimen/default_left_right_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="colorControlNormal">@color/text_hint_color</item>
        <item name="colorControlActivated">@color/text_hint_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/edit_text_size</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/text_hint_color</item>
        <!-- small text at blur-->
        <item name="colorControlNormal">@color/text_hint_color</item>
        <!-- bottom line at blur-->
        <item name="colorControlActivated">@color/text_hint_color</item>
        <!-- small text and bottom line at focus-->
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginEnd">@dimen/default_left_right_margin</item>
        <item name="android:layout_marginStart">@dimen/default_left_right_margin</item>
        <item name="android:background">@drawable/ripple_default_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/btn_text_size</item>
    </style>

    <style name="CustomProgressBarStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="LoadMoreLoaderStyle">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:indeterminate">true</item>
        <item name="spb_colors">@array/progress_bar_multi_color</item>
        <item name="spb_gradients">false</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_reversed">false</item>
        <item name="spb_progressiveStart_speed">1.5</item>
        <item name="spb_progressiveStop_speed">3.5</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1.2</item>
        <item name="spb_stroke_separator_length">10dp</item>
        <item name="spb_stroke_width">4dp</item>
    </style>

    <!--style for cards in account setting panel-->
    <style name="tv_account_setting">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">.8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="common_alert_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/bpblack</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
