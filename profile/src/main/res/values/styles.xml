<resources>

    <style name="tv_label">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12dp</item>
        <item name="android:textColor">@color/text_hint_color</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
    </style>

    <!--<style name="edt_profile_label" parent="tv_label">-->
    <!--<item name="android:layout_marginTop">@dimen/_5dp</item>-->
    <!--</style>-->

    <style name="tv_center_label" parent="tv_label">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="tv_center_value" parent="tv_value">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="tv_value">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:textColor">@color/tv_value_profile</item>
    </style>

    <style name="tv_email_value" parent="tv_value">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/text_hint_color</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
    </style>


    <style name="profile_edt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="colorControlNormal">@color/text_hint_color</item>
        <item name="colorControlActivated">@color/text_hint_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <!--<item name="android:importantForAutofill">no</item>-->
    </style>

    <style name="profile_email_edt_style" parent="profile_edt_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="txtInputLayout">
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="colorControlNormal">@color/text_hint_color</item>
        <item name="colorControlActivated">@color/text_hint_color</item>
    </style>

    <!--Calender View-->
    <style name="MyCustomBetterPickersDialogs" >
        <item name="bpPreHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderSelectedTextColor">@color/white</item>
        <item name="bpHeaderUnselectedTextColor">@color/white</item>
        <item name="bpBodyBackgroundColor">@color/white</item>
        <item name="bpBodySelectedTextColor">@color/colorPrimary</item>
        <item name="bpBodyUnselectedTextColor">#000000</item>
        <item name="bpRadialBackgroundColor">#FFEA7F5D</item>
        <item name="bpRadialTextColor">@color/colorPrimary</item>
        <item name="bpRadialPointerColor">@android:color/black</item>
        <item name="bpButtonsBackgroundColor">#ffffff</item>
        <item name="bpButtonsTextColor">@color/colorPrimary</item>
    </style>

</resources>