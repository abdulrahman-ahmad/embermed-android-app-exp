<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/login_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <RelativeLayout
                    android:id="@+id/rl_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:focusable="true"
                        android:src="@android:drawable/ic_menu_camera" />


                    <ImageView
                        android:id="@+id/iv_appr_upload_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:padding="3dp"
                        android:src="@android:drawable/ic_menu_camera" />

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/img_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_left_right_margin"
                    android:layout_marginRight="@dimen/default_left_right_margin"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/first_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10dp"
                    tools:ignore="SpUsage" />

                <EditText
                    android:id="@+id/edt_first_name"
                    style="@style/EditTextStyle"
                    android:hint="@string/first_name"
                    android:inputType="textWebEmailAddress"
                    android:theme="@style/EditTextHint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_left_right_margin"
                    android:layout_marginRight="@dimen/default_left_right_margin"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/last_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10dp"
                    tools:ignore="SpUsage" />

                <EditText
                    android:id="@+id/edt_last_name"
                    style="@style/EditTextStyle"
                    android:hint="@string/last_name"
                    android:inputType="textWebEmailAddress"
                    android:theme="@style/EditTextHint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_left_right_margin"
                    android:layout_marginRight="@dimen/default_left_right_margin"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/email"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10dp"
                    tools:ignore="SpUsage" />

                <EditText
                    android:id="@+id/edt_email"
                    style="@style/EditTextStyle"
                    android:hint="@string/email"
                    android:inputType="textWebEmailAddress"
                    android:theme="@style/EditTextHint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_left_right_margin"
                    android:layout_marginRight="@dimen/default_left_right_margin"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10dp"
                    tools:ignore="SpUsage" />

                <EditText
                    android:id="@+id/edt_dob"
                    style="@style/EditTextStyle"
                    android:hint="@string/date_of_birth"
                    android:inputType="textWebEmailAddress"
                    android:theme="@style/EditTextHint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_left_right_margin"
                android:layout_marginRight="@dimen/default_left_right_margin">

                <TextView
                    android:id="@+id/txt_patient_disease_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:text="@string/gender"
                    android:textColor="@color/text_color" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <RadioButton
                        android:id="@+id/rdb_victim_life_saved_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/rdb_victim_life_saved_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/female"
                        android:textColor="@color/text_color" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_40dp"
                android:layout_marginTop="@dimen/_40dp"
                android:layout_weight="325"
                android:gravity="center"
                android:weightSum="1080">

                <Button
                    android:id="@+id/btn_submit"
                    style="@style/BtnStyle"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="500"
                    android:background="@drawable/ripple_default_button"
                    android:text="@string/save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>